<script type="text/javascript">
    runAllForms();

    $(function() {
        setTimeout(function() {
            $("#flashMessage").hide('blind', {}, 500);
        }, 5000);
    });

    $(function () {
        jQuery.validator.addMethod("notEqual", function (value, element, param) {
            return this.optional(element) || value !== $(param).val();
        }, "This has to be different...");
        
        // Validation
        $("#changePasswordForm").validate({
            // Rules for form validation
            rules: {
                Password: {
                    required: true,
                    minlength: 6,
                    notEqual: "#oPassword"
                },
                confirmPassword: {
                    required: true,
                    minlength: 6,
                    equalTo: "#Password"
                },
                oldPassword: {
                    required: true,
                    equalTo: "#oPassword"
                }
            },

            messages: {
                Password: {
                    required: "Please enter new password",
                    minlength: "Please enter at least 6 characters",
                    notEqual: "New password can't be same as old password"
                },
                confirmPassword: {
                    required: "Please re-enter new password",
                    minlength: "Please enter at least 6 characters",
                    equalTo: "Password doesn't match"

                },
                oldPassword: {
                    required: "Please enter old password",
                    equalTo: "Please enter your correct old password"
                }
            },

            // Do not change code below
            errorPlacement: function(error, element) {
                error.insertAfter(element.parent());
            }
        });
    });


    window.AlertFunction = function(parm) {
        //Try setting the boolean this way
        if (parm == "invalid") {

            $.smallBox({
                title: "Invalid",
                content: "Sorry! Invalid login attempt.",
                color: "#C46A69",
                timeout: 10000,
                icon: "fa fa-warning swing animated"
            });
        }

    }

    $(function() {
        var checking = ("@ViewBag.MessageTitle").toLowerCase();
        console.log(checking);
        window.AlertFunction(checking);
    });
</script>

