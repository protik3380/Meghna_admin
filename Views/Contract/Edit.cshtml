                                            <label class="label">LPG Discount Percentage</label>
                                        </section>
                                        <section class="col col-6">
                                            <label class="input">
                                                @Html.TextBoxFor(model => model.LPGDiscountPercentage, new { placeholder = "Enter lpg discount percentage", type = "number" })
