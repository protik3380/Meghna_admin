    @section scripts{
        @*@Scripts.Render("~/bundles/jqueryval")*@
<script src="~/Scripts/jquery.validate.min.js"></script>
        <script>
        
        $("#editCorporateContractform").validate({

            rules: {
                CompanyName: "required",
                FMCGDiscountPercentage: {
                    required: true,
                    range: [0, 100],
                    number: true
                },
                LPGDiscountPercentage: {

                    range: [0, 100],
                    number: true
                }

            },
            messages: {
                CompanyName: "Please enter company name",
                FMCGDiscountPercentage: {
                    required: "Please enter fmcg discount percentage"
                }


            }
        });
        $(document).ready(function () {
            $('#Validity').datepicker({
                prevText: '<i class="fa fa-chevron-left"></i>',
                nextText: '<i class="fa fa-chevron-right"></i>',
                changeMonth: true,
                changeYear: true,
                dateFormat: "d MM, yy",
                showAnim: "slide"
            });

            $(function () {
                setTimeout(function () {
                    $("#flashMessage").hide('blind', {}, 500);
                }, 5000);
            });
        });
        </script>
    }