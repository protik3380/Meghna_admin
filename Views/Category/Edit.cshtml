@model EFreshStore.Models.Context.Category

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" type="text/css" href="~/Content/css/form-design.css" />
</head>

<body>
<div class="container">
    <div class="form-horizontal" id="div1">
        @using (Html.BeginForm(null, null, FormMethod.Post, new {id = "EditCategoryForm"}))
        {
            @Html.AntiForgeryToken()
        <div class='@TempData["Class"]' id="flashMessage" role="alert">@TempData["Message"]</div>
            <div class="form-horizontal">
                <h2>Update Category</h2>
                <hr/>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)
                @Html.HiddenFor(model => model.CreatedOn)

                <div class="form-group">
                    @Html.LabelFor(model => model.Name, "Name", htmlAttributes: new {@class = "control-label col-md-4"})
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.Name, new {placeholder = "Enter category name"})
                        <br/>
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group">
                    @Html.LabelFor(model => model.Description, htmlAttributes: new {@class = "control-label col-md-4"})
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.Description, new {placeholder = "Enter description"})
                        <br />
                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-4 col-md-8">
                        <input type="submit" value="Update" class="btn btn-default"/>
                    </div>
                </div>
            </div>
        }
        <div style="margin-left: 50px; color: red">
            @Html.ActionLink("Back to List", "Index", "", htmlAttributes: new { @class = "backLink" })
        </div>
    </div>
</div>
<div style="padding-top: 50px"></div>

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function() {
            $(function () {
                setTimeout(function () {
                    $("#flashMessage").hide('blind', {}, 500);
                }, 5000);
            });
        });
    </script>
}
</body>

</html>
