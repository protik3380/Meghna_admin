@using EFreshStore.Models.Context
@model IEnumerable<EFreshStore.Models.Context.MeghnaUser>

@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@*<div class='@TempData["Class"]' id="flashMessage" role="alert">@TempData["Message"]</div>*@
<section id="widget-grid" class="">
    <!-- row -->
    <div class="row">
        <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <!-- Widget ID (each widget will need unique ID)-->
            <div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-editbutton="false">
                <header>
                    <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                    <h2>Meghna Users </h2>
                </header>
                <!-- widget div-->
                <div>
                    <!-- widget content -->
                    <div class="widget-body no-padding">
                        <table id="dt_basic" class="table table-striped table-bordered table-hover" width="100%">
                            <thead>
                                <tr>
                                    <th>Employee Id</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Delivery Address</th>
                                    <th>Department</th>
                                    <th>Designation</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null)
                                {
                                    foreach (MeghnaUser meghnaUser in Model)
                                    {
                                        <tr>
                                            <td>@meghnaUser.EmployeeId</td>
                                            <td>@meghnaUser.Name</td>
                                            <td>@meghnaUser.Email</td>
                                            <td>@meghnaUser.DeliveryAddress1</td>
                                            @if (meghnaUser.MeghnaDepartment != null)
                                            {
                                                <td>@meghnaUser.MeghnaDepartment.Name</td>
                                            }
                                            else
                                            {
                                                <td></td>
                                            }
                                            
                                            @if (meghnaUser.MeghnaDesignation != null)
                                            {
                                                <td>@meghnaUser.MeghnaDesignation.Name</td>
                                            }
                                            else
                                            {
                                                <td></td>
                                            }
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- end widget content -->
                </div>
                <!-- end widget div -->
            </div>
            <!-- end widget -->
        </article>
    </div>
    <!-- end row -->
</section>

@section scripts{
    <script>
        $(document).ready(function() {
            $(function() {
                setTimeout(function() {
                    $("#flashMessage").hide('blind', {}, 500);
                }, 5000);
            });
        });
    </script>
}