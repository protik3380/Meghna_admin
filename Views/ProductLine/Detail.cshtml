@using EFreshStore.Models.Context
@model IEnumerable<EFreshStore.Models.Context.ProductLineDetail>

@{
    ViewBag.Title = "Product Line Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="widget-grid" class="">
    <!-- row -->
    <div class="row">
        <div class='@TempData["Class"]' id="flashMessage" role="alert">@TempData["Message"]</div>
        <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <!-- Widget ID (each widget will need unique ID)-->
            <div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-editbutton="false">
                <header>
                    <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                    <h2>Product Line Details </h2>
                </header>
                <!-- widget div-->
                <div>
                    <!-- widget content -->
                    <div class="widget-body no-padding">
                        <table id="dt_basic" class="table table-striped table-bordered table-hover" width="100%">
                            <thead>
                            <tr>
                                <th>Product</th>
                                <th>Product Line</th>
                                <th>Edit</th>
                            </tr>
                            </thead>
                            <tbody>
                            @if (Model != null)
                            {
                                foreach (ProductLineDetail data in Model)
                                {
                                    <tr>
                                        <td>@data.Product.Name</td>
                                        <td>@data.ProductLine.Name</td>
                                        <td>
                                            <input type="button" class="btn btn-success" onclick="location.href='../productline/editdetail/@data.Id'" value="Edit" />
                                        </td>
                                    </tr>
                                }
                            }
                            </tbody>
                        </table>
                    </div>
                    <!-- end widget content -->
                </div>
                <!-- end widget div -->
            </div>
            <!-- end widget -->
        </article>
    </div>
    <!-- end row -->
</section>
@section scripts{
    <script>
        $(document).ready(function() {
            $(function() {
                setTimeout(function() {
                    $("#flashMessage").hide('blind', {}, 500);
                }, 5000);
            });
        });
    </script>
}